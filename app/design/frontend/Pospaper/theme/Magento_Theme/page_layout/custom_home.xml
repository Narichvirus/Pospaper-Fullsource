<?xml version="1.0"?>
<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd"> 
    <update handle="empty"/>
    <referenceContainer name="page.wrapper">
        <container name="header.container" as="header_container" label="Page Header Container"  htmlTag="header" htmlClass="page-header" before="main.content"/>
        <container name="page.top" as="page_top" label="After Page Header" after="header.container"/>                                                
        <container name="footer-container" as="footer" before="before.body.end" label="Page Footer Container" htmlTag="footer" htmlClass="page-footer" />        
        <block class="Magento\Framework\View\Element\Template" name="test_file" template="Magento_Theme::html/home.phtml">
            <block class="Pos\Custommodule\Block\Bestseller" name="homepage.bestsellers" template="Pos_Custommodule::home_bestseller.phtml">
                <arguments>
                    <argument name="collection_type" xsi:type="string">bestsellers</argument>
                </arguments>
            </block>
            <block class="Pos\Custommodule\Block\Bestseller" name="homepage.featured" template="Pos_Custommodule::home_bestseller.phtml">
                <arguments>
                    <argument name="collection_type" xsi:type="string">featured</argument>
                </arguments>
            </block>
        </block>
        
    </referenceContainer>                                                                                                  
</layout>